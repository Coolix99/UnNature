{
    "manifest_version": 3,
    "name": "PageComment",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "http://localhost/*",
        "https://localhost/*"
    ]
}