{
  "manifest_version": 2,
  "name": "UnNature",
  "version": "0.1",
  "description": "Minimal test version of the UnNature extension.",
  "icons": {
    "48": "icons/nature_u.png"
  },

  "permissions": ["storage", "activeTab"],

  "browser_action": {
    "default_icon": "icons/nature_u.png",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },

  "web_accessible_resources": [
    "libs/marked.min.js",
    "libs/katex.min.js",
    "libs/katex.min.css",
    "libs/fonts/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/marked.min.js",
        "libs/katex.min.js",
        "content/detect.js",
        "content/comments.js",
        "content/ui.js",
        "content/content.js"
      ],
      "css": [
        "libs/katex.min.css"
      ]
    }
  ]
}
